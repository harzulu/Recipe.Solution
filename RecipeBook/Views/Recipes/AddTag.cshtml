@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Recipe

<h1>Add an Tag</h1>
<hr>
<h3>Add an Tag for this Recipe: @Html.DisplayFor(model => model.Title)</h3>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)

  @Html.Label("Select Tag")
  @Html.DropDownList("TagId")

  <input type="submit" value="Save" />
}