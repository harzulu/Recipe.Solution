@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Instruction;

<h1>Instruction Details</h1>

<h3>Instruction title: @Html.DisplayFor(model => model.Blurb)</h3>

<nav class="navbar navbar-light">  
  <div class="container-fluid" id="nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><li>@Html.ActionLink("Edit Instruction", "Edit", new { id = Model.InstructionId })</li>  
      </button>
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><li>@Html.ActionLink("Delete Instruction", "Delete", new { id = Model.InstructionId })</li>  
      </button>  
    </ul>  
  </div>  
</nav>