@{
  Layout = "_Layout";
}

@model RecipeBook.Models.Tag;

<h1>Tag Details</h1>

<h3>Tag title: @Html.DisplayFor(model => model.Category)</h3>

<nav class="navbar navbar-light">  
  <div class="container-fluid" id="nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span><li>@Html.ActionLink("Edit Tag", "Edit", new { id = Model.TagId })</li>  
      </button>
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span><li>@Html.ActionLink("Delete Tag", "Delete", new { id = Model.TagId })</li>  
      </button>  
    </ul>  
  </div>  
</nav>