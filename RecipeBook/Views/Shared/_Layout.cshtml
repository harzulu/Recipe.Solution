<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipe Book</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-home" aria-hidden="true"></span><li>@Html.ActionLink("Home", "Index", "Home")</li>
          </button>

          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span><li>@Html.ActionLink("Login", "Index", "Account")</li>
          </button>
          
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-book" aria-hidden="true"></span><li>@Html.ActionLink("See all Recipes", "Index", "Recipes")</li>
          </button>
          
          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span><li>@Html.ActionLink("See all Tags", "Index", "Tags")</li>
          </button>

          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><li>@Html.ActionLink("See all Ingredients", "Index", "Ingredients")</li>
          </button>

          <button type="button" class="btn btn-dark">
            <span class="glyphicon glyphicon-file" aria-hidden="true"></span><li>@Html.ActionLink("See all Instructions", "Index", "Instructions")</li>
          </button>
        </ul>
      </div>
    </nav>
    @RenderBody()
  </body>
</html>